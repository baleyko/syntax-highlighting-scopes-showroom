{
  "name": "syntax-highlighting-scopes-showroom",
  "displayName": "Syntax Highlighting Scopes Showroom",
  "description": "Syntax Highlighting Scopes Showroom",
  "version": "0.1.1",
  "publisher": "baleiko",
  "author": {
    "name": "Valerii Baleiko",
    "email": "baleyko@gmail.com"
  },
  "license": "MIT",
  "bugs": "https://github.com/baleyko/syntax-highlighting-scopes-showroom/issues",
  "homepage": "https://github.com/baleyko/syntax-highlighting-scopes-showroom#README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/baleyko/syntax-highlighting-scopes-showroom.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "syntax",
    "highlighting",
    "scopes"
  ],
  "engines": {
    "vscode": "^1.36.0",
    "atom": "^1.42.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "Syntax Highlighting Scopes Showroom",
        "extensions": [
          ".shss"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "Syntax Highlighting Scopes Showroom",
        "scopeName": "source.shss",
        "path": "./grammars/shss.json"
      },
      {
        "scopeName": "markdown.shss.codeblock",
        "path": "./grammars/shss.codeblock.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.shss": "shss"
        }
      }
    ]
  },
  "devDependencies": {
    "jsonlint": "1.6.3",
    "markdownlint-cli": "0.19.0",
    "yaml-lint": "1.2.4",
    "vsce": "1.67.1"
  },
  "scripts": {
    "publish": "yarn run vsce",
    "rebuild": "yarn run build:json && yarn run build:sublime-syntax && yarn run build:spec && yarn run build:syntax_test",
    "build:json": "cat example.shss | bin/to-json > grammars/shss.json",
    "build:sublime-syntax": "cat example.shss | bin/to-sublime-syntax > grammars/Shss.sublime-syntax",
    "build:spec": "cat example.shss | bin/to-spec > test/shss-spec.js",
    "build:syntax_test": "cat example.shss | bin/to-syntax_test > test/syntax_test_shss.shss",
    "ci:lint": "yarn run lint:yaml && yarn run lint:json && yarn run markdownlint *.md",
    "lint:yaml": "yarn run yamllint grammars/Shss.sublime-syntax",
    "lint:json": "for file in package.json messages.json language-configuration.json .vscode/launch.json grammars/shss.json  grammars/shss.codeblock.json; do yarn run jsonlint -q $file; done",
    "lint:markdown": "yarn run markdownlint *.md"
  }
}
